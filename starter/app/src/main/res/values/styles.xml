<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="tv_label_style">
        <item name="android:textSize">@dimen/tv_labels_size</item>
        <item name="android:textColor">@color/colorPrimaryDarkGray</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="et_style">
        <item name="android:textSize">@dimen/et_text_size</item>
        <item name="minHeight">@dimen/et_min_height</item>
        <item name="android:textColor">@color/colorPrimaryDarkGray</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">@color/colorLightGray</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/colorPrimaryGray</item>
    </style>

    <style name="bt_style">
        <item name="android:textSize">@dimen/tv_labels_size</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorBlack</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
